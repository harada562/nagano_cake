<%= render 'layouts/amin_header' %>
<h1>商品詳細</h1>
<%= attachment_image_tag @item, :image, :fill, 60, 60, fallback: "", size:'100x100'%>
<table class="table">
	<tr>
		<th>商品名</th>
		<td><%= @item.name%></td>
	</tr>

	<tr>
		<th>商品紹介</th>
		<td><%= @item.introduction%></td>
	</tr>

	<tr>
		<th>ジャンル</th>
		<td><%= @item.genre.name%></td>
	</tr>

	<tr>
		<th>税込価格</th>
		<td><%= @item.price%>円</td>
	</tr>

	<tr>
		<th>販売ステータス</th>
		<td><%= @item.is_active %></td>
	</tr>
</table>
<%= link_to '商品編集', edit_admin_item_path(@item.id), class: "btn btn-info" %>
