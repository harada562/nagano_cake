<div class="container">
	<%= render 'layouts/customer_header' %>
	<h1 class="customer_show_h1">マイページ</h1>
	<div class="row">
		<div class="col-lg-11">
		<table class="customer_show_table">
			<tr>
				<th>氏名</th>
				<td><%= @customer.first_name%><%= @customer.last_name%></td>
			</tr>
			<tr class="customer_show_tr">
				<th>郵便番号</th>
				<td><%= @customer.postal_code %></td>
			</tr>
			<tr>
				<th>住所</th>
				<td><%= @customer.address %></td>
			</tr>
			<tr>
				<th>電話番号</th>
				<td><%= @customer.telephone_number %></td>
			</tr>
			<tr>
				<th>メールアドレス</th>
				<td><%= @customer.email %></td>
			</tr>
		</table>
	</div>
	</div>
	<div class="row">
		<div class="col-lg-11 customer_show_link">
		<%= link_to '編集する', edit_public_customer_path(current_customer) ,class: "btn btn-warning active"%>
		<%= link_to '配送先', public_addresses_path ,class: "btn btn-warning active"%>
		<%= link_to '注文履歴', public_orders_path,class: "btn btn-warning active" %>
		</div>
	</div>
</div>