<div class="container">
  <%= render 'layouts/customer_header' %>
  <h1><%= @customer.first_name%><%= @customer.last_name%>さんの会員情報編集</h1>
  <%= form_for(@customer, url: public_customer_path) do |f| %>
    <div class="form-group">
    	 <div class="field">
        <%= f.label :名前 %>
        <%= f.label :'(姓)' %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "姓"  , class: "form-control"%>
        <%= f.label :'(名)' %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "名"  , class: "form-control"%>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <%= f.label :フリガナ %>
        <%= f.label :'(セイ)' %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "姓"  , class: "form-control"%>
        <%= f.label :'(メイ)' %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "名"  , class: "form-control"%>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <%= f.label :'郵便番号(ハイフンなし)' %>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code"  , class: "form-control"%>
      </div>
    </div>
    <div class="form-group">
       <div class="field">
        <%= f.label :'住所' %>
        <%= f.text_field :address, autofocus: true, autocomplete: "address"  , class: "form-control"%>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <%= f.label :'電話番号（ハイフンなし）' %>
        <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number"  , class: "form-control"%>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email"  , class: "form-control"%>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "編集内容を保存する" , class: "btn btn-warning active"%>
    </div>
  <% end %>
  <div class="customer_edit_withdrawal">
  <%= link_to '退会', public_customer_confirm_path(@customer),class: "btn btn-default active"%>
  </div>
</div>